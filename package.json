{
  "name": "chainecho",
  "private": true,
  "version": "1.0.0",
  "description": "ChainEcho â€” Multi-chain transaction tracer (Solana + EVM).",
  "license": "MIT",
  "scripts": {
    "install:all": "pnpm install --recursive",
    "dev": "pnpm --parallel run dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:all": "pnpm run build --recursive",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm --recursive run lint",
    "format": "prettier --write ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.3.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
